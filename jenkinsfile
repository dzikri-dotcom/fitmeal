pipeline {
    agent any

    environment {
        REGISTRY_URL = 'fitmeal.azurecr.io'
        IMAGE_NAME   = 'fitmeal'
        DOCKER_CRED_ID = 'acr-fitmeal'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                bat "docker build -t %REGISTRY_URL%/%IMAGE_NAME%:latest ."
            }
        }

        stage('Login to ACR') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: DOCKER_CRED_ID,
                    usernameVariable: 'ACR_USER',
                    passwordVariable: 'ACR_PASS'
                )]) {
                    bat "docker login %REGISTRY_URL% -u %ACR_USER% -p %ACR_PASS%"
                }
            }
        }

        stage('Push Image') {
            steps {
                bat "docker push %REGISTRY_URL%/%IMAGE_NAME%:latest"
            }
        }
    }
}
